    <changeSet id="0" author="André">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela DISTRIBUIDORA">
            <not>
                <tableExists tableName="DISTRIBUIDORA"/>
            </not>
        </preConditions>

        <createTable tableName="DISTRIBUIDORA">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DISTRIBUIDORA"/>
            </column>

            <column name="NOME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="DATA" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <addAutoIncrement tableName="DISTRIBUIDORA"
                          columnName="id"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"
        />
    </changeSet>

